doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Private 1:1 FaceTalk
        link(rel="stylesheet", href="./public/css/style.css")
        //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 { Private 1:1 FaceTalk }
        main
            div#welcome
                form
                    input#roomName(placeholder="Room Name", required, type="text")
                    input#userName(placeholder="User Name", required, type="text")
                    button#enterBtn Enter room
            div#call
                div#myStream
                    div#outer
                        div#all
                            div#roomTitle
                                h2#roomAndUser
                            div#face
                                video#myFace(autoplay, playsinline)
                                video#peerFace(autoplay, playsinline)
                            div#options
                                select#cameras
                                div#btn-div
                                    button#mute Mute
                                    button#camera Turn Camera Off
                        div#chat-div
                            h2#chatTitle Chat.
                            div#chat
                                ul
                            form#msg
                                input#message(placeholder="Enter the new message", required, type="text")
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")